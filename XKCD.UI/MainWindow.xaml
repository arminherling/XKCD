<Window x:Class="XKCD.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XKCD.UI"
        mc:Ignorable="d"
        Title="XKCD" Height="450" Width="600" Loaded="Window_Loaded" Icon="favicon.ico">
    <StackPanel>
        <TextBlock Text="{Binding Number}"/>
        <TextBlock Text="{Binding Title}"/>
        <TextBlock Text="{Binding ReleaseDate, StringFormat=d}" />
        <Image Source="{Binding ImageSource}"/>
        <TextBlock Text="{Binding Text}"/>
        <TextBlock Text="{Binding Link}"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="|&lt;" Command="{Binding FirstComicCommand}"/>
            <Button Content="Previous" Command="{Binding PreviousComicCommand}"/>
            <Button Content="Random" Command="{Binding RandomComicCommand}"/>
            <Button Content="Next" Command="{Binding NextComicCommand}"/>
            <Button Content="&gt;|" Command="{Binding LastComicCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
